<Window x:Class="BMPLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BMP Launcher - TheBarMaxx Edition"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="BMP" FontSize="24" FontWeight="Bold" Foreground="#FF3CB371"/>
                <TextBlock Text="LAUNCHER" FontSize="24" FontWeight="Bold" Foreground="White" Margin="5,0,0,0"/>
                <TextBlock Text="alpha build" FontSize="10" Foreground="red" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Настройки запуска -->
            <Border Grid.Column="0" Background="#FF252526" CornerRadius="5" Padding="15" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="НАСТРОЙКИ ЗАПУСКА" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,0,0,10"/>

                    <!-- Игрок -->
                    <TextBlock Text="Игрок:" Foreground="#FFCCCCCC" Margin="0,10,0,5"/>
                    <TextBox x:Name="PlayerNameTextBox" Height="30" 
                             Background="#FF3E3E42" Foreground="White" 
                             CaretBrush="White" BorderThickness="0"
                             TextChanged="PlayerNameTextBox_TextChanged"/>

                    <!-- Выбор версии Minecraft -->
                    <TextBlock Text="Версия Minecraft:" Foreground="#FFCCCCCC" Margin="0,10,0,5"/>
                    <ComboBox x:Name="VersionComboBox" Height="30" 
                              Background="#FF3E3E42" Foreground="White"
                              BorderThickness="0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}" Foreground="White"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Настройки Java -->
                    <TextBlock Text="Настройки Java:" FontWeight="Bold" Foreground="#FFCCCCCC" Margin="0,15,0,5"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBox x:Name="JavaPathTextBox" Height="30" Width="200" 
                                 Background="#FF3E3E42" Foreground="White" 
                                 CaretBrush="White" BorderThickness="0"/>
                        <Button Content="..." Width="30" Height="30" Margin="5,0,0,0"
                                Click="BrowseJavaPath_Click" Background="#FF3E3E42" 
                                Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <Button Content="Автоопределение Java" Height="30" Margin="0,5,0,10"
                            Click="AutoDetectJava_Click" Background="#FF3E3E42" 
                            Foreground="White" BorderThickness="0"/>

                    <Button Content="Проверить версию" Height="30" Margin="0,0,0,10"
                            Click="CheckJavaVersion_Click" Background="#FF3E3E42" 
                            Foreground="White" BorderThickness="0"/>

                    <!-- Память -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Min RAM (Xms):" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <ComboBox x:Name="XmsComboBox" Height="30" 
                                      Background="#FF3E3E42" Foreground="White"
                                      BorderThickness="0" SelectedIndex="1">
                                <ComboBoxItem>512M</ComboBoxItem>
                                <ComboBoxItem>1G</ComboBoxItem>
                                <ComboBoxItem>2G</ComboBoxItem>
                                <ComboBoxItem>4G</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Max RAM (Xmx):" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                            <ComboBox x:Name="XmxComboBox" Height="30" 
                                      Background="#FF3E3E42" Foreground="White"
                                      BorderThickness="0" SelectedIndex="1">
                                <ComboBoxItem>1G</ComboBoxItem>
                                <ComboBoxItem>2G</ComboBoxItem>
                                <ComboBoxItem>3G</ComboBoxItem>
                                <ComboBoxItem>4G</ComboBoxItem>
                                <ComboBoxItem>8G</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Доп. аргументы -->
                    <TextBlock Text="Доп. аргументы Java:" Foreground="#FFCCCCCC" Margin="0,10,0,5"/>
                    <TextBox x:Name="JavaArgsTextBox" Height="30" 
                             Background="#FF3E3E42" Foreground="White" 
                             CaretBrush="White" BorderThickness="0"
                             TextChanged="JavaArgsTextBox_TextChanged"/>

                    <!-- Статус авторизации -->
                    <Border Background="#FF2D2D30" CornerRadius="3" Padding="10" Margin="0,20,0,10">
                        <StackPanel>
                            <TextBlock x:Name="AuthStatusText" Text="Не авторизован" 
                                       Foreground="#FFFF6B6B" FontWeight="Bold"/>
                            <Button Content="Войти через Ely.by" 
                                    Click="ElyAuthButton_Click" 
                                    Height="30" Margin="0,10,0,0"
                                    Background="#FF3CB371" Foreground="White"
                                    FontWeight="Bold" BorderThickness="0"/>
                        </StackPanel>
                    </Border>

                    <!-- Основные кнопки -->
                    <StackPanel Margin="0,10,0,0">
                        <Button x:Name="DownloadButton" Content="СКАЧАТЬ ВЕРСИЮ" 
                                Click="DownloadButton_Click" Height="40"
                                Background="#FF007ACC" Foreground="White"
                                FontWeight="Bold" Margin="0,0,0,5"/>

                        <Button x:Name="LaunchButton" Content="ЗАПУСТИТЬ ИГРУ" 
                                Click="LaunchButton_Click" Height="45"
                                Background="#FF3CB371" Foreground="White"
                                FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Правая панель - Модпаки -->
            <Border Grid.Column="1" Background="#FF252526" CornerRadius="5" Padding="15" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок модпаков -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="МОДПАКИ THEBARMAXX" FontWeight="Bold" 
                                   FontSize="16" Foreground="White"/>
                        <TextBlock x:Name="ModpackCountText" Text="(загрузка...)" FontSize="12" 
                                   Foreground="#FFCCCCCC" Margin="10,3,0,0"/>
                    </StackPanel>

                    <!-- Индикатор загрузки -->
                    <Border x:Name="LoadingIndicator" Grid.Row="1" 
                            Background="#202D2D30" Visibility="Collapsed"
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="20">
                            <ProgressBar Width="20" Height="20" IsIndeterminate="True"
                                       Foreground="#FF3CB371" Margin="0,0,10,0"/>
                            <TextBlock Text="Загрузка модпаков..." Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Список модпаков -->
                    <ListBox x:Name="ModpacksListBox" Grid.Row="1" 
         Background="Transparent" BorderThickness="0"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         SelectionChanged="ModpackSelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF2D2D30" CornerRadius="3" 
                    Padding="10" Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Информация о модпаке -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name, FallbackValue='Без названия'}" 
                                   FontWeight="Bold" FontSize="14"
                                   Foreground="White" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Description, FallbackValue='Описание отсутствует'}" 
                                   Foreground="#FFCCCCCC" FontSize="11"
                                   Margin="0,5,0,0" TextWrapping="Wrap"
                                   MaxHeight="40" TextTrimming="CharacterEllipsis"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <!-- Безопасная привязка к автору -->
                                                <TextBlock FontSize="10" Foreground="#FFCCCCCC">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="👤 {0}">
                                                            <Binding Path="Authors[0].Name" 
                                                 FallbackValue="Неизвестно"
                                                 TargetNullValue="Неизвестно"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>

                                                <TextBlock Text=" • " FontSize="10" Foreground="#FF666666" 
                                       Margin="5,0,5,0"/>

                                                <TextBlock Text="{Binding DownloadCount, StringFormat='📥 {0:N0}', FallbackValue='📥 0'}" 
                                       FontSize="10" Foreground="#FF3CB371"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Версия -->
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <!-- Безопасная привязка к версии -->
                                            <TextBlock FontSize="11" Foreground="#FFCCCCCC" 
                                   HorizontalAlignment="Right">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="MC {0}">
                                                        <Binding Path="GameVersionLatestFiles[0].GameVersion" 
                                             FallbackValue="?"
                                             TargetNullValue="?"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>

                                            <TextBlock Text="{Binding DateModified, StringFormat='🕐 {0:dd.MM.yyyy}', FallbackValue='🕐 ?'}" 
                                   FontSize="10" Foreground="#FF666666"
                                   HorizontalAlignment="Right" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Панель управления модпаками -->
                    <Border Grid.Row="2" Background="#FF2D2D30" CornerRadius="3" 
                            Padding="10" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Поле поиска -->
                            <TextBox x:Name="SearchModpackTextBox" Grid.Column="0" Height="30"
                                     Background="#FF3E3E42" Foreground="White"
                                     CaretBrush="White" BorderThickness="0"
                                     KeyDown="SearchModpackTextBox_KeyDown"
                                     Padding="10,0,10,0"
                                     IsEnabled="{Binding ModpacksLoaded}"/>

                            <!-- Кнопки управления -->
                            <Button Grid.Column="1" Content="Поиск" Width="80" Height="30"
                                    Margin="10,0,5,0" Click="SearchModpacksButton_Click"
                                    Background="#FF007ACC" Foreground="White"
                                    BorderThickness="0"
                                    IsEnabled="{Binding ModpacksLoaded}"/>

                            <Button Grid.Column="2" Content="Установить" Width="100" Height="30"
                                    Click="InstallModpack_Click" Background="#FF3CB371"
                                    Foreground="White" FontWeight="Bold"
                                    BorderThickness="0"
                                    IsEnabled="{Binding ModpacksLoaded}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Нижняя панель - Консоль и статус -->
        <Grid Grid.Row="2" Background="#FF252526">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Консоль вывода -->
            <Border Grid.Row="0" Margin="10,10,10,5" CornerRadius="3" MaxHeight="100">
                <Grid>
                    <Border Background="#FF0D0D0D" CornerRadius="3">
                        <ScrollViewer>
                            <TextBox x:Name="ConsoleOutput" FontFamily="Consolas" 
                                     FontSize="11" Foreground="#FFCCCCCC"
                                     Background="Transparent" BorderThickness="0"
                                     IsReadOnly="True" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <!-- Прогресс-бар и статус -->
            <Border Grid.Row="1" Background="#FF2D2D30" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <ProgressBar x:Name="DownloadProgress" Height="10" 
                                     Background="#FF3E3E42" Foreground="#FF3CB371"
                                     BorderThickness="0"/>
                        <TextBlock x:Name="StatusText" Text="Готов" 
                                   Foreground="#FFCCCCCC" FontSize="11"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>